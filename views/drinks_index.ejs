<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head'); %>
</head>
<body class="container">

<header>
  <%- include('partials/header'); %>
</header>
<style>
  li {text-transform: capitalize;}
  h3, h4 {color: white; text-align: center; padding-bottom: 3%; padding-top: 4%;}
  img {max-width: 20vw; max-height: 20vh; align-self: center;}
</style>
<main>
  <div class="row">
    <div class="col-sm-8">
      <div class="jumbotron">
        <h1>Drinks Menu</h1>
        <ul>
          <% for(let drink in allDrinks) { %>
          <li>
          <a href="/drinks/<%= drink %> "><%= allDrinks[drink].name %> </a>
          </li> 
          <% } %>   
        </ul>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="well">
        <h3>Featuring</h3>
        <h4><a href="/drinks/4" class="text-muted">404 Horsemen</a></h4>
        <img src="<%=allDrinks[4].image%>" alt="<%=allDrinks[4].name%>" class="shadow-lg mb-5 bg-light rounded mx-auto d-block">
      </div>
    </div>
  </div>
  
  

</main>

<footer>
  <%- include('partials/footer'); %>
</footer>

</body>
</html>
